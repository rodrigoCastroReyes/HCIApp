<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:elevation="5dp">

        <View
            android:id="@+id/stateReminder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#f40b0b"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:showDividers="end"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0.5"
            android:layout_gravity="center">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Necesito Comprar Leche"
                android:id="@+id/titleReminder"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"
                android:paddingLeft="2dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_height="25dp"
                    android:id = "@+id/dateLayout"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/dateReminderIcon"
                        android:layout_weight="0.20"
                        android:layout_gravity="left"
                        android:src="@drawable/ic_today" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="24 Febrero"
                        android:id="@+id/dateReminder"
                        android:layout_below="@+id/linearLayout"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.80"
                        android:layout_gravity="left" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_height="25dp"
                    android:id = "@+id/timeLayout"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/timeReminderIcon"
                        android:layout_weight="0.20"
                        android:src="@drawable/ic_schedule" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="08:00 AM"
                        android:id="@+id/timeReminder"
                        android:layout_below="@+id/linearLayout"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.75" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!--
        <CheckBox
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Resolver"
            android:id="@+id/checkBox"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_weight="0.25" />-->

    </LinearLayout>
</RelativeLayout>