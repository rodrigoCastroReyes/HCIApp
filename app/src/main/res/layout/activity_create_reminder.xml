<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.rodrigo.hciapp.CreateReminderActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#2196f3"
        android:layout_alignParentEnd="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wrapper"
        android:orientation="vertical"
        android:layout_below="@+id/my_toolbar">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wrapperTitulo"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inputTitle"
                android:hint="Ingresar Titulo"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wrapperNotes"
            android:orientation="horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inputNotes"
                android:hint="Notas"
                android:layout_below="@+id/inputTitle"
                android:inputType="text|textMultiLine"
                android:layout_alignStart="@+id/inputTitle"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wrapperParameters"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="calendar"
                android:id="@+id/btnInputCalendar"
                android:onClick="setCalendar"
                android:layout_below="@+id/inputNotes"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hour"
                android:id="@+id/btnInputHour"
                android:onClick="setTime"
                android:layout_below="@+id/editText"
                android:layout_alignStart="@+id/btnInputCalendar" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:id="@+id/btnNotifications"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/btnInputHour" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wrapperSensors"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Photo"
            android:id="@+id/btnTakePhoto"
            android:onClick="takePhotoHandle"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voice Note"
            android:id="@+id/btnCreateVoiceNote"
            android:onClick="recordVoiceNoteHandle"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnInputHour" />

    </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_below="@+id/btnInputCalendar"
            android:layout_toEndOf="@+id/inputNotes" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_above="@+id/btnTakePhoto"
            android:layout_alignStart="@+id/editText"
            android:layout_marginBottom="66dp" />


    </LinearLayout>

</RelativeLayout>
