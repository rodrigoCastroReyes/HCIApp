<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rodrigo.hciapp.CreateReminderActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:id="@+id/btnTakePhoto"
        android:onClick="takePhotoHandle"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice Note"
        android:id="@+id/btnCreateVoiceNote"
        android:onClick="recordVoiceNoteHandle"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnInputHour" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputTitle"
        android:hint="Ingresar Titulo"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnTakePhoto" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputNotes"
        android:hint="Notas"
        android:layout_below="@+id/inputTitle"
        android:inputType="text|textMultiLine"
        android:layout_alignStart="@+id/inputTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calendar"
        android:id="@+id/btnInputCalendar"
        android:onClick="setCalendar"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/inputNotes"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hour"
        android:id="@+id/btnInputHour"
        android:onClick="setTime"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/btnInputCalendar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/btnInputCalendar"
        android:layout_toEndOf="@+id/inputNotes" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_above="@+id/btnTakePhoto"
        android:layout_alignStart="@+id/editText"
        android:layout_marginBottom="66dp" />

</RelativeLayout>
